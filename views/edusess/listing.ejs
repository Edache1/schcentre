<% const eduArry = data.eduSecnArry %>
<!-- Main content -->
<section class="content">
<!-- Default box -->
<div class="card">
<div class="card-header">
  <h3 class="card-title">School Levels</h3>

  <div class="card-tools">
    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
      <i class="fas fa-minus"></i></button>
    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
      <i class="fas fa-times"></i></button>
  </div>
</div>
<div class="card-body">
  <% if (eduArry){eduArry.forEach(sch => { 
    let sections = sch.sessions;
  %>
  <div class="row">
    <!-- accepted payments column -->
    <div class="col-4">
        <!-- small box -->
        <div class="small-box bg-success">
          <div class="inner">
            <h3><%=sch.school%></h3>
          </div>
          <div class="icon">
            <i class="ion ion-stats-bars"></i>
          </div>
          <a href="/education/update/<%=sch.eduid%>" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div> 
    </div>
    <!-- /.col -->
    <div class="col-8">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">School Section</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <table class="table table-bordered">
            <thead>                  
              <tr>
                <th>#</th>
                <th style="width: 8%" class="text-center">
                  Status
                </th>
                <th style="width: 20%">Start Date</th>
                <th style="width: 20%">End Date</th>
                <th style="width: 25%">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (sections.length > 0) { sections.forEach(secsn => {%>
              <tr>
                <td><%=secsn.section%></td>
                <td class="project-state">
                    <span class="badge badge-success">in progress</span>
                </td>
                <td><%=secsn.startDate%></td>
                <td><%=secsn.endDate%></td>
                <td>
                  <a class="btn btn-danger btn-sm" href="/edusess/delete/<%=secsn.esid%>">
                      <i class="fas fa-trash">
                      </i>
                      Remove
                  </a>
                </td>
              </tr>
              <%})}else{%>
              <tr>
                <td colspan="5" style="color:red" align="center">E M P T Y</td>
              </tr>
              <%}%>
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
          <ul class="pagination pagination-sm m-0 float-right">
            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
          </ul>
        </div>
      </div>
      <!-- /.card -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
  <hr><br>
  <%})};%>
</div>
<!-- /.card-body -->
</div>
<!-- /.card -->
</section>
<!-- /.content -->
<%- include('../templates/footer') %>