<!-- Main content -->
<section class="content">
  <!-- Default box -->
  <div class="card">
    <div class="card-header">
      <h3 class="card-title"><%=title%></h3>
      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fas fa-minus"></i></button>
        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fas fa-times"></i></button>
      </div>
    </div>
    <div class="card-body">
      <!-- right column -->
      <div class="col-md-6">
        <!-- general form elements disabled -->
        <div class="card card-warning card-outline">
          <div class="card-header">
            <h3 class="card-title">Set Sessions Term/Semester</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <form method="post" name="sessint" action="/sessint/register">
              <div class="row">
                <div class="col-sm-6">
                  <!-- select -->
                  <div class="form-group">
                    <label>Select Section</label>
                    <select class="form-control" name="sessid">
                      <option>select...</option>
                      <% if (data.sections){ data.sections.forEach(section => { %>
                      <option value="<%- section.sessid %>"><%- section.section %></option>
                      <% })} %>
                    </select>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>Select Term</label>
                    <select class="form-control" name="intid">
                      <option>select...</option>
                      <% if (data.intervals){ data.intervals.forEach(interval => { %>
                      <option value="<%- interval.intid %>"><%- interval.term %></option>
                      <% })} %>
                    </select>
                  </div>
                  <div class="form-group">
                      <label>Term Start Date:</label>
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="far fa-calendar-alt"></i>
                          </span>
                        </div>
                        <input type="text" class="form-control float-right" id="startDate" name="startDate">
                      </div>
                      <!-- /.input group -->
                    </div>
                    <!-- /.form group -->
                    <div class="form-group">
                      <label>Term End Date:</label>
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="far fa-calendar-alt"></i>
                          </span>
                        </div>
                        <input type="text" class="form-control float-right" id="endDate" name="endDate">
                      </div>
                      <!-- /.input group -->
                    </div>
                    <!-- /.form group -->



                </div>
              </div>
          </div>
          <!-- /.card-body -->
            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <!-- /.card -->
      </div>
      <!--/.col (right) -->
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</section>
<!-- /.content -->
<%- include('../templates/footer') %>
<script>
  $(function () {
    $('#startDate').daterangepicker({
      singleDatePicker: true
    });
    //Date range picker
    $('#endDate').daterangepicker({
      singleDatePicker: true
    });
  })
</script>